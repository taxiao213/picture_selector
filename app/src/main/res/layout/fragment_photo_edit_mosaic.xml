<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_group_edit_mosaic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        style="@style/edit_button"
        android:layout_weight="1.8"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_edit_mosaic_grid"
        style="@style/edit_button"
        android:layout_gravity="center"
        android:layout_weight="1.3"
        android:drawableStart="?attr/picture_edit_bottom_mosaic_grid"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/tv_edit_mosaic_sand"
        style="@style/edit_button"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:drawableStart="?attr/picture_edit_bottom_mosaic_sand"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />


</LinearLayout>

