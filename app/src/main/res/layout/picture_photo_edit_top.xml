<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_top_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/tv_top_edit_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:text="?attr/picture_edit_top_cancel_text_content"
        android:textColor="?attr/picture_edit_top_cancel_text_color"
        android:textSize="?attr/picture_edit_top_text_size" />

    <TextView
        android:id="@+id/tv_top_edit_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:text="?attr/picture_edit_top_complete_text_content"
        android:textColor="?attr/picture_edit_top_complete_text_color"
        android:textSize="?attr/picture_edit_top_text_size" />

</RelativeLayout>