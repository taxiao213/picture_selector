<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/picture_selector_bottom_height"
    android:background="?attr/picture_selector_bottom_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/ck_bottom_center_text"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bottom_lef_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:drawableEnd="?attr/picture_selector_bottom_left_text_subscript"
            android:drawablePadding="3dp"
            android:maxLines="1"
            android:textColor="?attr/picture_selector_bottom_left_text_color"
            android:textSize="?attr/picture_selector_bottom_left_text_size" />
    </LinearLayout>


    <CheckBox
        android:id="@+id/ck_bottom_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:button="@null"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/bottom_original_image_selector"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:textColor="?attr/picture_selector_bottom_center_text_color"
        android:textSize="?attr/picture_selector_bottom_center_text_size"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_bottom_preview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:textColor="?attr/picture_selector_bottom_preview_text_color"
        android:textSize="?attr/picture_selector_bottom_preview_text_size" />
</RelativeLayout>