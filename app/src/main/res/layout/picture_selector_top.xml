<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_top_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/picture_selector_top_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/picture_selector_top_height"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_top_left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="?attr/picture_selector_top_back_icon" />

        <TextView
            android:id="@+id/tv_top_lef_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_top_left_back"
            android:text="?attr/picture_selector_top_left_text_content"
            android:textColor="?attr/picture_selector_top_left_text_color"
            android:textSize="?attr/picture_selector_top_left_text_size" />

        <TextView
            android:id="@+id/tv_top_send_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="?attr/picture_selector_top_send_text_bg"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingEnd="7dp"
            android:paddingStart="7dp"
            android:paddingTop="5dp"
            android:text="?attr/picture_selector_top_send_text_content"
            android:textColor="?attr/picture_selector_top_send_text_color"
            android:textSize="?attr/picture_selector_top_send_text_size" />
    </RelativeLayout>

</RelativeLayout>