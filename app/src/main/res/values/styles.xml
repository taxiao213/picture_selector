<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--白色主题样式-->
    <style name="pictrue.white.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/white_trans</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/white_trans</item>

        <!--顶部-->
        <!--顶部栏的背景色-->
        <item name="picture_selector_top_bg">@color/white_trans</item>
        <!--顶部栏的高度-->
        <item name="picture_selector_top_height">@dimen/picture_selector_top_height</item>
        <!--后退按钮图标-->
        <item name="picture_selector_top_back_icon">@drawable/top_back_icon</item>
        <!--标题文字大小-->
        <item name="picture_selector_top_title_size">@dimen/picture_selector_top_text_size</item>
        <!--标题文字颜色-->
        <item name="picture_selector_top_title_color">@color/grey_33</item>
        <!--发送文字大小-->
        <item name="picture_selector_top_send_text_size">@dimen/picture_selector_top_text_size</item>
        <!--发送文字颜色-->
        <item name="picture_selector_top_send_text_color">@color/white_trans</item>
        <!--发送文字的背景色-->
        <item name="picture_selector_top_send_text_bg">@drawable/shape_top_text_bg</item>

        <!--底部-->
        <!--底部栏的背景色-->
        <item name="picture_selector_bottom_bg">@color/white_trans_95</item>
        <!--底部栏的高度-->
        <item name="picture_selector_bottom_height">@dimen/picture_selector_bottom_height</item>
        <!--左侧相册名称文字大小-->
        <item name="picture_selector_bottom_left_text_size">@dimen/picture_selector_bottom_text_size</item>
        <!--左侧相册名称文字颜色-->
        <item name="picture_selector_bottom_left_text_color">@color/white_trans</item>
        <!--左侧相册名称文字角标-->
        <item name="picture_selector_bottom_left_text_subscript">@drawable/bottom_left_text_subscript</item>
        <!--中间原图文字大小-->
        <item name="picture_selector_bottom_center_text_size">@dimen/picture_selector_bottom_text_size</item>
        <!--中间原图文字颜色-->
        <item name="picture_selector_bottom_center_text_color">@color/white_trans</item>
        <!--中间原图文字checkbox背景-->
        <item name="picture_selector_bottom_center_text_checkbox">@drawable/bottom_original_image_selector</item>
        <!--右侧预览文字大小-->
        <item name="picture_selector_bottom_preview_text_size">@dimen/picture_selector_bottom_text_size</item>
        <!--右侧预览文字颜色-->
        <item name="picture_selector_bottom_preview_text_color">@color/white_trans</item>

        <!--滑动显示的时间状态-->
        <!--滑动显示的高度-->
        <item name="picture_selector_slide_height">@dimen/picture_selector_slide_height</item>
        <!--滑动显示的文字背景色-->
        <item name="picture_selector_slide_text_bg">@color/white_trans_70</item>
        <!--滑动显示的文字大小-->
        <item name="picture_selector_slide_text_size">@dimen/picture_selector_slide_text_size</item>
        <!--滑动显示的文字颜色-->
        <item name="picture_selector_slide_text_color">@color/white_trans</item>

    </style>

</resources>
