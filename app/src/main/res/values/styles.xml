<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--白色主题样式-->
    <style name="pictrue.white.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--导航栏颜色-->
        <item name="colorPrimary">@color/white_trans</item>
        <!--通知栏颜色-->
        <item name="colorPrimaryDark">@color/white_trans</item>

        <!--顶部-->
        <!--顶部栏的背景色-->
        <item name="picture_selector_top_bg">@color/white_trans</item>
        <!--顶部栏的高度-->
        <item name="picture_selector_top_height">@dimen/picture_selector_top_height</item>
        <!--后退按钮图标-->
        <item name="picture_selector_top_back_icon">@drawable/top_back_icon</item>
        <!--左侧标题文字大小-->
        <item name="picture_selector_top_left_text_size">@dimen/picture_selector_top_text_size</item>
        <!--左侧标题文字颜色-->
        <item name="picture_selector_top_left_text_color">@color/grey_33</item>
        <!--左侧标题文字默认内容-->
        <item name="picture_selector_top_left_text_content">@string/picture_selector_top_left_text</item>
        <!--发送文字的背景色-->
        <item name="picture_selector_top_send_text_bg">@drawable/top_send_text_bg_selector</item>
        <!--发送文字大小-->
        <item name="picture_selector_top_send_text_size">@dimen/picture_selector_top_text_size</item>
        <!--发送文字颜色-->
        <item name="picture_selector_top_send_text_color">@color/top_send_text_color_selector</item>
        <!--发送文字默认内容-->
        <item name="picture_selector_top_send_text_content">@string/picture_selector_top_send_text_default</item>

        <!--底部-->
        <!--底部栏的背景色-->
        <item name="picture_selector_bottom_bg">@color/grey_2f</item>
        <!--底部栏的高度-->
        <item name="picture_selector_bottom_height">@dimen/picture_selector_bottom_height</item>
        <!--左侧相册名称文字大小-->
        <item name="picture_selector_bottom_left_text_size">@dimen/picture_selector_bottom_text_size</item>
        <!--左侧相册名称文字颜色-->
        <item name="picture_selector_bottom_left_text_color">@color/white_trans</item>
        <!--左侧相册名称文字角标-->
        <item name="picture_selector_bottom_left_text_subscript">@drawable/bottom_left_text_subscript</item>
        <!--中间原图文字大小-->
        <item name="picture_selector_bottom_center_text_size">@dimen/picture_selector_bottom_text_size</item>
        <!--中间原图文字颜色-->
        <item name="picture_selector_bottom_center_text_color">@color/white_trans</item>
        <!--中间原图文字selector背景-->
        <item name="picture_selector_bottom_center_text_drawable_left">@drawable/bottom_original_image_selector</item>
        <!--右侧预览文字大小-->
        <item name="picture_selector_bottom_preview_text_size">@dimen/picture_selector_bottom_text_size</item>
        <!--右侧预览文字颜色-->
        <item name="picture_selector_bottom_preview_text_color">@color/white_trans</item>

        <!--滑动显示的时间状态-->
        <!--滑动显示的高度-->
        <item name="picture_selector_slide_height">@dimen/picture_selector_slide_height</item>
        <!--滑动显示的文字背景色-->
        <item name="picture_selector_slide_text_bg">@color/black_trans_90</item>
        <!--滑动显示的文字大小-->
        <item name="picture_selector_slide_text_size">@dimen/picture_selector_slide_text_size</item>
        <!--滑动显示的文字颜色-->
        <item name="picture_selector_slide_text_color">@color/white_trans</item>

        <!--recyclerview-->
        <!--背景色-->
        <item name="picture_selector_ry_bg">@android:color/white</item>
        <item name="picture_selector_ry_checkbox">@drawable/image_checkbox_selector</item>

        <!--预览界面-->
        <!--预览界面底部布局-->
        <item name="picture_selector_previews_ll_bg">@color/black_trans_80</item>

    </style>

    <!--底部选择相册弹框-->
    <style name="BottomDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_bottom_out</item>
    </style>

</resources>
